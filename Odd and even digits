package com.gmail.orfejka;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int mass[] = { 0, 5, 2, 4, 7, 1, 3, 19 };
		int count = 0;
		for (int i = 0; i < mass.length; i++) {

			if (mass[i] % 2 == 0) {
				count++;
			}

		}
		int oddDigits = mass.length - count;
		System.out.println("The number of even digits are " + count);
		System.out.println("The number of odd digits are " + oddDigits);

	}

}
