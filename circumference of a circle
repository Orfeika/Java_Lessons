package com.gmail.orfejka;
import java.util.Scanner;
import java.lang.Math;

public class Main {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		System.out.println("Type a radius to count  the distance around the circle: ");
		double r = sc.nextInt();
		double circumferenceOfCircle= Math.PI*2*r;
		System.out.println("Your circumference of a circle is " + circumferenceOfCircle);
	}

}
